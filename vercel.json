{
    "version": 2,
    "functions": {
        "api/*.php": {
            "runtime": "vercel-php@0.7.3"
        }
    },
    "git": {
        "deploymentEnabled": {
            "main": true,
            "dev": true
        }
    },
    "headers": [
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/video/(.*)\\.(mp4|webm|ogg)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000"
                },
                {
                    "key": "Content-Type",
                    "value": "video/mp4"
                }
            ]
        },
        {
            "source": "/video/(.*)\\.(jpg|jpeg|png|gif)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/assets/(.*)",
            "destination": "/public/assets/$1"
        },
        {
            "source": "/video/(.*)",
            "destination": "/public/video/$1"
        },
        {
            "source": "/test",
            "destination": "/api/test.php"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/",
            "destination": "/api/index.php"
        },
        {
            "source": "/(.*)",
            "destination": "/api/index.php"
        }
    ]
}
