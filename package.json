{
    "name": "dmytropalahin.github.io",
    "version": "1.0.0",
    "description": "My portfolio with XML/XSL transformation and TypeScript",
    "scripts": {
        "dev": "webpack serve --mode development --open",
        "build": "webpack --mode production",
        "start": "serve -s dist -l 3000",
        "compile": "tsc",
        "watch": "tsc --watch",
        "clean": "rm -rf dist && mkdir -p dist",
        "clean-all": "rm -rf node_modules dist package-lock.json",
        "postinstall": "npm run build"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "typescript": "^5.0.0",
        "webpack": "^5.88.0",
        "webpack-cli": "^5.1.0",
        "webpack-dev-server": "^4.15.0",
        "ts-loader": "^9.4.0",
        "html-webpack-plugin": "^5.5.0",
        "css-loader": "^6.8.0",
        "style-loader": "^3.3.0",
        "raw-loader": "^4.0.2",
        "file-loader": "^6.2.0"
    },
    "dependencies": {
        "serve": "^14.2.0"
    },
    "keywords": [
        "portfolio",
        "xml",
        "xsl",
        "typescript",
        "web-development"
    ],
    "author": "Dmytro Palahin",
    "license": "MIT"
